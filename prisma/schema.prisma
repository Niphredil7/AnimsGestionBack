model Feedback {
  status Favorite @default(IsFavorite)
  userId String
  user User @relation(fields:[userId], references:[id])
  planningId String
  planning PlanningActivity @relation(fields:[planningId], references:[id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

    @@id([planningId, userId])

}

model Child {
  id String @id @default(uuid())
  schoolId String
  school School @relation(fields:[schoolId], references: [id])
  firstName String @db.VarChar(100)
  lastName String @db.VarChar(100)
  sexe GenreChild
  classId String
  class Class @relation(fields:[classId], references:[id])
  parentId String?
  parent User? @relation(fields:[parentId], references:[id])
  allergen Boolean @default(false)
  regime Regime @default(NONE)
  activityForbiden ActivityForbidenn @default(NONE)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum GenreChild {
  F
  M
}

enum Regime {
  NONE
  NOPORK
  VEGETARIAN
  PREPARED
}

enum ActivityForbidenn {
  NONE
  ESCALATION
  POOL
}

model Class {
  id String @id @default(uuid()) 
  name String @db.VarChar(100)
  userId String?
  userAnimator User? @relation(fields:[userId], references:[id])

  children Child[]

  planningsActivities PlanningActivity[]
}


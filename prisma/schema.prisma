generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  address String @unique()
  zipCode Int 
  city String @db.VarChar(100)
  type SchoolType @default(PRIMAIRE)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt


  users User[]

  children Child[]
}

enum SchoolType {
  PRIMAIRE
  MATERNELLE
  PRIMAIRE_MATERNELLE
}

enum UserStatus {
NOT_CONFIRMED
CONFIRMED
DEACTIVATED
BANNED
}

enum UserRole {
  COORDO
  ANIMATOR
  VISITOR
  PARENT
  ANIMATOR_PARENT
}

enum TokenType {
  REFRESH_TOKEN
  ACTIVATE_ACCOUNT
  RESET_PASSWORD
}

model Token {
  token String @db.Text //refresh notamment
  type TokenType
  userId String
  user User @relation(fields:[userId],references:[id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  expiresAt      DateTime?  

  @@id([type,userId]) // index plus performant // associatÂ° des deux uniques
}

model User {
  id String @id @default(uuid())
  username String @db.VarChar(100)
  email String @unique
  password String @db.VarChar(100)
  schoolId String?
  school School? @relation(fields:[schoolId], references: [id])
  firstname String? @db.VarChar(100)
  lastname String? @db.VarChar(100)
  address String? @db.VarChar(100)
  zipCode Int? 
  city String @db.VarChar(100)
  phone String? @db.VarChar(20)
  available String? @db.VarChar(200)
  content String? @db.VarChar(200)
  cv String? @db.Text
  visibility Visible @default(NO)
  status UserStatus @default(NOT_CONFIRMED)
  role UserRole @default(VISITOR)
  picture String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  activities Activity[]

  feedbacks Feedback[]

  classes Class[]

  children Child[]

  happennings Happenning[]

  notifications UserHasNotification[]

  tokens Token[]

  outings Outing[]
}

enum Visible {
  ALL
  NO
  PROFIL
  CV
}

model Activity {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  content String? @db.VarChar(300)
  favorite Favorite @default(IsNotFavorite)
  userId String 
  userCreator User @relation(fields:[userId], references: [id])
  roomId String
  room Room @relation(fields:[roomId], references:[id])
  categoryMaterialId String?
  categoryMaterial CategoryMaterial? @relation(fields:[categoryMaterialId], references:[id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  plannings PlanningActivity[]

}

model Outing {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  content String? @db.VarChar(300)
  localisation String @db.VarChar(200)
  favorite Favorite @default(IsNotFavorite)
  userId String 
  userCreator User @relation(fields:[userId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt


  plannings PlanningActivity[]

}

enum Favorite {
  IsNotFavorite
  IsFavorite
}

model Room {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  activity Activity[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Planning {
  id String @id @default(uuid())
  dateStart DateTime @db.Date()
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  planningActivities PlanningActivity[]
}

model PlanningActivity {
  id String @id @default(uuid())
  moment EMoment
  validatedAt DateTime?
  activityId String?
  activity Activity? @relation(fields:[activityId], references:[id])
  outingId String?
  outing Outing? @relation(fields:[outingId], references:[id])
  planningId String?
  planning Planning? @relation(fields:[planningId], references:[id])
  classId String
  classe Class @relation(fields:[classId], references:[id])
  day Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  feedbacks Feedback[]
  Notification Notification[]
  @@unique([planningId, activityId, outingId, classId, moment, day])
  

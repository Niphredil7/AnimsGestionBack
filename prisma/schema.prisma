model Happenning {
  id String @id @default(uuid())
  title String @db.VarChar(100)
  content String @db.Text
  dateStart DateTime
  dateEnd DateTime
  type HappenningType @default(REUNION)
  creatorId String
  creator User @relation(fields:[creatorId], references:[id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  notifications Notification[]
}

enum HappenningType {
  RDV
  REUNION
}

model Notification {
  id String @id @default(uuid())
  type NotificationType
  message String @db.VarChar(200)
  planningActivityId String?
  planningActivity PlanningActivity? @relation(fields:[planningActivityId], references:[id])
  happenningId String?
  happenning Happenning? @relation(fields:[happenningId], references:[id])
  createdAt DateTime  @default(now())

  users UserHasNotification[]

}

model UserHasNotification {
  notificationId String
  notification Notification @relation(fields:[notificationId], references:[id])
  userId String
  userSent User @relation(fields:[userId], references:[id])
  seen Boolean

  @@id([notificationId, userId])
}

enum NotificationType {
  HAPPENNING
  ACTIVITY
}

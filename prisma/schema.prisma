model Material {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  categories CategoryMaterial[]
}

model CategoryMaterial {
  id String @id @default(uuid())
  name String @db.VarChar(100)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  materials Material[]
  activities Activity[]
}

